<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javapackagemaker.Controller">
   <center>
      <TabPane>
         <tabs>
            <Tab closable="false" text="Primary Options">
               <content>
                  <Pane fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="511.0" prefWidth="687.0">
                     <children>
                        <Label layoutX="540.0" layoutY="413.0" text="Created by:&#10;Mostafa Ayaz&#10;&#10;Report bugs to&#10;ayazmostafa@gmail.com" />
                        <TextField fx:id="appNameArea" layoutX="160.0" layoutY="38.0" />
                        <Label layoutX="56.0" layoutY="42.0" text="Output app name" />
                        <TextField fx:id="appDescriptionArea" layoutX="159.0" layoutY="76.0" />
                        <Label layoutX="25.0" layoutY="80.0" text="Output app description" />
                        <Accordion />
                        <TextField fx:id="pathToOutputArea" layoutX="496.0" layoutY="76.0" />
                        <Label layoutX="409.0" layoutY="80.0" text="Path to output" />
                        <Label layoutX="368.0" layoutY="119.0" text="Path to javafx modules" />
                        <TextField fx:id="pathToModArea" layoutX="496.0" layoutY="115.0" />
                        <Button fx:id="browseJARFileButton" layoutX="149.0" layoutY="124.0" mnemonicParsing="false" onAction="#browseJARFileButtonOnAction" prefHeight="56.0" prefWidth="103.0" text="jar file" />
                        <TextField fx:id="appVersionArea" layoutX="159.0" layoutY="201.0" />
                        <Label layoutX="87.0" layoutY="205.0" text="App version" />
                        <ComboBox fx:id="appExtensionSelector" layoutX="428.0" layoutY="180.0" prefWidth="150.0" />
                        <Label layoutX="333.0" layoutY="184.0" text="App extension" />
                     </children>
                  </Pane>
               </content>
            </Tab>
            <Tab closable="false" text="Installer Options">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox layoutX="269.0" layoutY="146.0" prefHeight="200.0" prefWidth="247.0">
                           <children>
                              <CheckBox fx:id="winDirChooser" mnemonicParsing="false" text="User can choose installation location" />
                              <CheckBox fx:id="winShortcut" mnemonicParsing="false" text="Enable &quot;Add shortcut to Desktop&quot;" />
                              <CheckBox fx:id="winMenu" mnemonicParsing="false" text="Enable &quot;Add shortcut to StartMenu&quot;" />
                              <CheckBox fx:id="winPerUserInstall" mnemonicParsing="false" text="Installation requests per-user basis" />
                              <CheckBox mnemonicParsing="false" text="Verbose" />
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab closable="false" text="Terminal Code">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TextArea fx:id="terminalCodeArea" prefHeight="170.0" prefWidth="640.0" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
   <bottom>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="createButton" layoutX="389.0" layoutY="57.0" mnemonicParsing="false" onAction="#createButtonOnAction" prefHeight="63.0" prefWidth="94.0" text="Create!">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Button>
            <Label layoutX="95.0" layoutY="74.0" text="Works for windows apps only :)">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </bottom>
</BorderPane>
